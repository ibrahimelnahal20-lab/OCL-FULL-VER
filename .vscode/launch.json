        {
            "name": "Full ocl (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "Full ocl (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "Full ocl (Web on Firefox)", // <--- إضافة خيار جديد هنا
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug", // يمكنك تغييرها إلى "profile" أو "release" حسب الحاجة
            "args": ["-d", "firefox"] // <--- هذا هو الجزء الذي يحدد المتصفح
        }
    ]
